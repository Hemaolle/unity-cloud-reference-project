.avatar-badge-container {
    padding-left: 15px;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
}

.avatar-badge {
    margin-left: -15px;
}

.avatar-divider {
    margin-right: 15px;
}

.top-menu-button-avatar-badge-container{
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    min-width: 0px;
    max-width: 150px;
    height: 48px;
    border-width: 0;
    border-radius: 0;
    background-color: var(--appui-color-transparent-black-0);
}

.collaborator-data{
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
}

.collaborator-data-badge{
    margin: 2px;
    flex-grow: 0;
    flex-shrink: 0;
}

.collaborator-data-header{
    flex-grow: 1;
    flex-shrink: 1;
    padding-left: 15px;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
}

.collaborator-data-microphone{
    flex-grow: 0;
    flex-shrink: 0;
    align-items: center;
}